{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block main %}
	<div class="container mt-5">
		<h1>Rejestracja
		</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm, {'attr':{'class': 'row g-3 needs-validation bg-light my-3 p-3 px-5 border border-1 rounded-4' }}
		)}}

		<div class="col-md-6">
			{{ form_label(registrationForm.firstName, 'Imię', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.firstName) }}
			</div>
		</div>
		<div class="col-md-6">
			{{ form_label(registrationForm.lastName, 'Nazwisko', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.lastName) }}
			</div>
		</div>


		<div class="col-md-6">
			{{ form_label(registrationForm.password.first, 'Hasło', {'label_attr': {'class': 'form-label', }}) }}
			{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.password.first) }}
			</div>
		</div>

		<div class="col-md-6">
			{{ form_label(registrationForm.password.second, 'Powtórz Hasło', {'label_attr': {'class': 'form-label', }}) }}
			{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.password.second) }}
			</div>
		</div>

		<div class="col-md-6">
			{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.email) }}
			</div>
		</div>

		<div class="col-md-6 m-0">
			<label class="form-label required" for="registration_password_second">Rola</label>
			{{ form_widget(registrationForm.roles, {'attr': {'class': 'form-check p-0'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.roles) }}
			</div>
		</div>

		<div class="col-md-6 mb-3 ms-2 form-check">
			{{ form_label(registrationForm.agreeTerms, 'Potwierdzam Regulamin', {'label_attr': {'class': 'form-check-label', }}) }}
			{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
			<div class="text-danger">
				{{ form_errors(registrationForm.agreeTerms) }}
			</div>
		</div>
		<button type="submit" class="btn btn-success">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
