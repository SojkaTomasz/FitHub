{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h1>Logowanie</h1>
		<form action="{{ path('app_login') }}" method="post" class="row g-3 needs-validation bg-light my-3 p-3 px-5 border border-1 rounded-4">
			<div class="col-md-12">
				<label for="username" class="form-label">Email:</label>
				<input type="email" id="username" name="_username" class="form-control" value="{{ last_username }}">
			</div>
			<div class="col-md-12">
				<label for="password" class="form-label">Password:</label>
				<input type="password" id="password" name="_password" class="form-control">
			</div>
			{% if error %}
				<div class="text-center ">
					<p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
				</div>
			{% endif %}
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-success" type="submit">login</button>
		</form>
	</div>
{% endblock %}
